{
  "name": "g-reader",
  "displayName": "g-reader",
  "description": "a simple reader on the vscode status bar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "g-reader",
      "properties": {
        "g-reader.resource": {
          "type": "string",
          "description": "book resource",
          "default": ""
        },
        "g-reader.textCount": {
          "type": "number",
          "description": "count of text in a line",
          "default": 10
        }
      }
    },
    "commands": [
      {
        "command": "g-reader.previous",
        "title": "g-reader:Previous page"
      },
      {
        "command": "g-reader.next",
        "title": "g-reader:Next page"
      },
      {
        "command": "g-reader.jumpToPosition",
        "title": "g-reader:Jump to position"
      },
      {
        "command": "g-reader.toggleAutoScroll",
        "title": "g-reader:toggle auto scroll"
      },
      {
        "command": "g-reader.startAutoScroll",
        "title": "g-reader:start auto scroll"
      },
      {
        "command": "g-reader.increaseScrollInterval",
        "title": "g-reader:Increase scroll interval"
      },
      {
        "command": "g-reader.decreaseScrollInterval",
        "title": "g-reader:Decrease scroll interval"
      }
    ],
    "keybindings": [
      {
        "command": "g-reader.increaseScrollInterval",
        "key": "alt+shift+]",
        "when": "editorTextFocus"
      },
      {
        "command": "g-reader.decreaseScrollInterval",
        "key": "alt+shift+[",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "g-reader",
          "title": "g-reader",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "views": {
      "g-reader": [
        {
          "id": "g-reader",
          "type": "webview",
          "icon": "assets/logo.svg",
          "name": "g-reader"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}